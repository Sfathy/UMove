@model UMoveNew.Models.Users

@{
    ViewBag.Title = "Create";
}
@section Styles {

<link href="@UMoveNew.Views.user.Create.form" rel="stylesheet" type="text/css" />
<link href='http://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
}


<div class="container">
    <div class="form-style-10">
<h1>@UMoveNew.Views.user.Create.SignUpNow !</h1>
        <p style="color:red;font-size:larger;font-weight:bold;">@TempData["error"]</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     @Html.ValidationSummary(true)
    <div class="section"><span>1</span>@UMoveNew.Views.user.Create.NameUserNameAddress</div>
    <div class="inner-wrap">
        <label>@UMoveNew.Views.user.Create.YourFullName @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)</label>
        <label>
            @UMoveNew.Views.user.Create.UserName @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </label>
        <label>@UMoveNew.Views.user.Create.Address @Html.EditorFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)</label>
    </div>

    <div class="section"><span>2</span>@UMoveNew.Views.user.Create.EmailPhone</div>
    <div class="inner-wrap">
        <label>@UMoveNew.Views.user.Create.EmailAddress @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)</label>
        <label>@UMoveNew.Views.user.Create.PhoneNumber @Html.EditorFor(model => model.Phone) @Html.ValidationMessageFor(model => model.Phone)</label>
    </div>

    <div class="section"><span>3</span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@UMoveNew.Views.user.Create.Passwords</div>
        <div class="inner-wrap">
        <label>@UMoveNew.Views.user.Create.Password @Html.EditorFor(model => model.Password) @Html.ValidationMessageFor(model => model.Password)</label>
        <label >@UMoveNew.Views.user.Create.ConfirmPassword @Html.EditorFor(model => model.ConfirmPassword,new { required="required"})
            @Html.ValidationMessageFor(model => model.ConfirmPassword)</label>
            <input type="hidden" name="Type" id="Type" value="@TempData["Type"]" />
    </div>
    <div class="button-section">
        <input type="submit" name="Sign Up" value="@UMoveNew.Views.user.Create.SignUp" />
    
    </div>
}
</div>
    </div>


}






