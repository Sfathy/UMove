@model UMoveNew.Models.LoginModel

@{
    ViewBag.Title = "ForgetPassword";
}
@section Styles {

    <link href="@UMoveNew.Views.user.Login.form" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Bitter' rel='stylesheet' type='text/css'>
}

<div class="container">
    <div class="form-style-10">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h1>@UMoveNew.Views.user.Login.ForgetPassword</h1>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@UMoveNew.Views.user.Login.Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
    
